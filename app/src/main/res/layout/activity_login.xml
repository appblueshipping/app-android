<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_blueshipping_tela_inicial_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".activity.LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:orientation="vertical">


            <ImageView
                android:src="@drawable/ic_logo_blueshipping_mobile"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginBottom="40dp"
                android:layout_gravity="center"/>


            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/activity_login_txt_userName"
                    android:text="@string/txt_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:textColor="@color/colorLightBlue"/>

                <EditText
                    android:id="@+id/activity_login_edtEmail"
                    android:textColor="@color/colorWhite"
                    android:textColorHint="@color/colorWhite"
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:gravity="center|top"
                    android:maxLines="1"
                    android:textSize="18sp"
                    android:inputType="textEmailAddress"
                    android:backgroundTint="@color/colorWhite60percent" />

                <TextView
                    android:id="@+id/activity_login_txt_password"
                    android:text="@string/txt_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:textColor="@color/colorLightBlue" />

                <EditText
                    android:id="@+id/activity_login_edtPass"
                    android:textColor="@color/colorWhite"
                    android:textColorHint="@color/colorWhite"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:gravity="center|top"
                    android:maxLines="1"
                    android:textSize="18sp"
                    android:inputType="textPassword"
                    android:backgroundTint="@color/colorWhite60percent"
                    android:layout_marginBottom="8dp"/>

                <Button
                    android:id="@+id/activity_login_btnForgotPassword"
                    android:text="@string/btn_forgot_pass"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:background="@android:color/transparent"
                    android:gravity="top|center"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:layout_marginBottom="32dp"
                    android:onClick="onClick"/>

                <RelativeLayout
                    android:layout_gravity="center"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/activity_login_btnAuthentication"
                        android:text="@string/btn_login"
                        android:textColor="@android:color/white"
                        android:gravity="center"
                        android:layout_width="@dimen/standard_button_width"
                        android:layout_height="@dimen/standard_button_height"
                        android:textAllCaps="false"
                        android:background="@drawable/round_rect_btn_blue"
                        android:onClick="onClick"/>

                    <!--android:background="@drawable/shape_round_rect_primary"-->

                    <!--<ProgressBar-->
                        <!--android:id="@+id/activity_login_pbAuthentication"-->
                        <!--android:layout_width="20dp"-->
                        <!--android:layout_height="40dp"-->
                        <!--android:translationZ="2dp"-->
                        <!--android:layout_alignParentRight="true"-->
                        <!--android:visibility="gone"-->
                        <!--android:layout_marginRight="16dp"/>-->

                    <!--&lt;!&ndash;android:theme="@style/ProgressThemeWhite"&ndash;&gt;-->

                </RelativeLayout>

            </LinearLayout>

            <Button
                android:id="@+id/activity_login_btnGoSignup"
                android:text="@string/btn_login_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:layout_marginTop="40dp"
                android:layout_gravity="center"
                android:onClick="onClick"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>




